{
  "name": "geo-seo-domination-tool",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "author": "Your Company Name",
  "description": "Advanced local SEO and GEO ranking analysis tool integrating Perplexity and SEMrush APIs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && electron-builder",
    "build:win": "npm run build -- --win",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "db:test": "node scripts/test-db-connection.js",
    "db:init": "node scripts/init-database.js",
    "db:init:verify": "node scripts/init-database.js --verify",
    "db:migrate": "node scripts/migrate.js up",
    "db:migrate:down": "node scripts/migrate.js down",
    "db:migrate:status": "node scripts/migrate.js status",
    "db:migrate:create": "node scripts/migrate.js create",
    "db:seed:tutorials": "node scripts/seed-tutorials.js"
  },
  "build": {
    "appId": "com.geoseodomination.app",
    "productName": "GEO-SEO-Domination-Tool",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    }
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "better-sqlite3": "^12.4.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "express": "^5.1.0",
    "node-cron": "^4.2.1",
    "pg": "^8.13.1",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.1",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0"
  }
}
