{
  "id": "database-schema",
  "version": "1.0.0",
  "title": "Database Schema",
  "summary": "Generate a modular SQL schema file following the project's pattern (SQLite/PostgreSQL compatible)",
  "tags": ["database", "sql", "schema"],
  "targetPaths": ["database/"],
  "variables": [
    {
      "name": "schemaName",
      "required": true,
      "example": "content-library",
      "description": "Name of the schema file (kebab-case)"
    },
    {
      "name": "tableName",
      "required": true,
      "example": "articles",
      "description": "Primary table name (plural, snake_case)"
    },
    {
      "name": "description",
      "required": false,
      "default": "TODO: Add description",
      "description": "Schema description"
    }
  ],
  "templates": [
    {
      "from": "schema.sql.eta",
      "to": "database/<%= it.schemaName %>-schema.sql",
      "engine": "eta"
    }
  ],
  "conflicts": [
    {
      "glob": "database/*-schema.sql",
      "strategy": "fail"
    }
  ],
  "hooks": {
    "post": [
      "echo 'Remember to run: npm run db:migrate'"
    ]
  },
  "validators": ["sql-syntax"],
  "licenses": [
    {
      "name": "MIT"
    }
  ]
}
