{
  "id": "docker-compose",
  "version": "1.0.0",
  "title": "Docker + Compose for Next.js app",
  "summary": "Adds Dockerfile for web-app and a docker compose file for local/prod.",
  "tags": ["docker", "compose", "nextjs"],
  "variables": [
    { "name": "SERVICE_NAME", "required": true, "example": "web" },
    { "name": "PORT", "required": false, "example": "3000" },
    { "name": "NODE_VERSION", "required": false, "example": "20" },
    { "name": "IMAGE_PREFIX", "required": false, "example": "ghcr.io/your-user/geo-seo" }
  ],
  "templates": [
    { "from": "templates/web.Dockerfile.eta", "to": "infra/docker/web.Dockerfile", "engine": "eta" },
    { "from": "templates/compose.yml.eta",    "to": "infra/docker/compose.yml",   "engine": "eta" },
    { "from": "templates/README.md.eta",      "to": "docs/builders/docker-compose.md", "engine": "eta" }
  ],
  "licenses": [{ "name": "MIT" }]
}
