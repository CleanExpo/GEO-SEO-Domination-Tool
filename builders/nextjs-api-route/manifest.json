{
  "id": "nextjs-api-route",
  "version": "1.0.0",
  "title": "Next.js API Route",
  "summary": "Generate a Next.js 15 App Router API route with TypeScript, Zod validation, and service layer pattern",
  "tags": ["nextjs", "api", "typescript"],
  "targetPaths": ["web-app/app/api/"],
  "variables": [
    {
      "name": "routeName",
      "required": true,
      "example": "companies",
      "description": "Name of the API route (plural, lowercase)"
    },
    {
      "name": "resourceName",
      "required": true,
      "example": "Company",
      "description": "Name of the resource (singular, PascalCase)"
    },
    {
      "name": "hasAuth",
      "required": false,
      "default": true,
      "description": "Include authentication middleware"
    },
    {
      "name": "methods",
      "required": false,
      "default": ["GET", "POST"],
      "description": "HTTP methods to implement"
    }
  ],
  "templates": [
    {
      "from": "route.ts.eta",
      "to": "web-app/app/api/<%= it.routeName %>/route.ts",
      "engine": "eta"
    }
  ],
  "conflicts": [
    {
      "glob": "web-app/app/api/**/route.ts",
      "strategy": "fail"
    }
  ],
  "validators": ["typescript"],
  "licenses": [
    {
      "name": "MIT"
    }
  ]
}
