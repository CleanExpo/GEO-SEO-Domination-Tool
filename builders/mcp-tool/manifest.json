{
  "id": "mcp-tool",
  "version": "1.0.0",
  "title": "MCP Tool",
  "summary": "Generate a new MCP tool implementation for the geo-builders-mcp server",
  "tags": ["mcp", "tool", "typescript"],
  "targetPaths": ["tools/geo-builders-mcp/src/tools/"],
  "variables": [
    {
      "name": "toolName",
      "required": true,
      "example": "preview_apply",
      "description": "Name of the MCP tool (snake_case)"
    },
    {
      "name": "toolDescription",
      "required": true,
      "example": "Dry-run an application of a builder and return a readable diff plan",
      "description": "Description of what the tool does"
    },
    {
      "name": "functionName",
      "required": true,
      "example": "previewApply",
      "description": "Function name (camelCase)"
    }
  ],
  "templates": [
    {
      "from": "tool.ts.eta",
      "to": "tools/geo-builders-mcp/src/tools/<%= it.toolName.replace(/_/g, '-') %>.ts",
      "engine": "eta"
    }
  ],
  "conflicts": [
    {
      "glob": "tools/geo-builders-mcp/src/tools/*.ts",
      "strategy": "fail"
    }
  ],
  "hooks": {
    "post": [
      "echo 'Remember to register the tool in src/index.ts!'"
    ]
  },
  "validators": ["typescript"],
  "licenses": [
    {
      "name": "MIT"
    }
  ]
}
