{
  "id": "mcp-tool",
  "version": "1.0.0",
  "title": "MCP Server Tool (TypeScript)",
  "summary": "Scaffolds a new MCP tool handler for your MCP server with Zod validation.",
  "tags": ["mcp", "tool", "typescript", "zod"],
  "variables": [
    { "name": "TOOL_NAME", "required": true, "example": "fetch_data" },
    { "name": "TOOL_DESCRIPTION", "required": false, "example": "Fetches data from external API" }
  ],
  "templates": [
    {
      "from": "templates/tool.ts.eta",
      "to": "tools/geo-builders-mcp/src/tools/<%= TOOL_NAME %>.ts",
      "engine": "eta"
    },
    {
      "from": "templates/readme.md.eta",
      "to": "docs/builders/mcp-tool-<%= TOOL_NAME %>.md",
      "engine": "eta"
    }
  ],
  "validators": [],
  "licenses": [{ "name": "MIT" }]
}
