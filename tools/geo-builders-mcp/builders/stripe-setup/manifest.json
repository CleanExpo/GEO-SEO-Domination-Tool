{
  "id": "stripe-setup",
  "title": "Stripe Setup (env + client)",
  "summary": "Creates .env.local entries and a minimal Stripe server client.",
  "engine": "eta",
  "variables": [
    {
      "name": "STRIPE_SECRET_KEY",
      "required": true,
      "example": "sk_live_xxx_or_sk_test_xxx"
    },
    {
      "name": "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
      "required": true,
      "example": "pk_live_xxx_or_pk_test_xxx"
    }
  ],
  "files": [
    {
      "from": "templates/.env.local.eta",
      "to": "web-app/.env.local",
      "strategy": "append-or-create"
    },
    {
      "from": "templates/lib/stripe.ts.eta",
      "to": "web-app/lib/stripe.ts",
      "strategy": "create-or-overwrite"
    }
  ]
}
