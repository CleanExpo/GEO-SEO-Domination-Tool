{
  "id": "usage-metering-schema",
  "title": "Usage Metering Schema + Quotas",
  "summary": "Creates usage tracking tables with quotas, RLS policies, and helper functions for metering API calls, storage, and custom metrics.",
  "engine": "eta",
  "variables": [
    {
      "name": "SCHEMA_NAME",
      "required": false,
      "example": "public"
    },
    {
      "name": "USAGE_TABLE",
      "required": false,
      "example": "usage_metrics"
    },
    {
      "name": "QUOTAS_TABLE",
      "required": false,
      "example": "quota_limits"
    }
  ],
  "files": [
    {
      "from": "templates/sql/usage-metering.sql.eta",
      "to": "database/supabase/usage_metering.sql",
      "strategy": "create-or-overwrite"
    },
    {
      "from": "templates/README.md.eta",
      "to": "docs/builders/usage-metering-schema.md",
      "strategy": "create-or-overwrite"
    }
  ]
}
