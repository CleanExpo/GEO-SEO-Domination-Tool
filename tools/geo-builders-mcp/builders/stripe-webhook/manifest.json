{
  "id": "stripe-webhook",
  "title": "Stripe Webhook (Next.js route)",
  "summary": "Adds an App Router webhook endpoint with signature verification.",
  "engine": "eta",
  "variables": [
    {
      "name": "WEBHOOK_SECRET",
      "required": true,
      "example": "whsec_xxx"
    },
    {
      "name": "ROUTE_SEGMENT",
      "required": false,
      "example": "stripe"
    }
  ],
  "files": [
    {
      "from": "templates/route.ts.eta",
      "to": "web-app/app/api/webhooks/<%= ROUTE_SEGMENT || 'stripe' %>/route.ts",
      "strategy": "create-or-overwrite"
    }
  ]
}
