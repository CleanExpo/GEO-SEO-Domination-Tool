#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run TypeScript type checking
echo "ğŸ“ Checking TypeScript..."
npx tsc --noEmit || {
  echo "âŒ TypeScript errors found. Please fix them before committing."
  exit 1
}

# Run ESLint on staged files
echo "ğŸ” Running ESLint..."
npx lint-staged || {
  echo "âŒ ESLint errors found. Please fix them before committing."
  exit 1
}

# Run Prettier on staged files
echo "âœ¨ Running Prettier..."
npx prettier --write --ignore-unknown $(git diff --cached --name-only --diff-filter=ACM) || {
  echo "âŒ Prettier formatting failed."
  exit 1
}

# Add formatted files back to staging
git add $(git diff --cached --name-only --diff-filter=ACM)

echo "âœ… Pre-commit checks passed!"
