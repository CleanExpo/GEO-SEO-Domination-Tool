name: CI
on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: <%= NODE_VERSION || '20' %>
          cache: 'npm'
      - run: npm ci
      - run: npm run typecheck || true
      - run: npm run lint || true
      - run: npm run build -w web-app
