{
  "id": "nextjs-api-route",
  "version": "1.0.0",
  "title": "Next.js API Route (Zod validated)",
  "summary": "Generates a typed API route with Zod validation for Next.js 15 App Router.",
  "tags": ["nextjs", "api", "zod"],
  "variables": [
    { "name": "ROUTE_NAME", "required": true, "example": "health" },
    { "name": "ZOD_SCHEMA", "required": false, "example": "z.object({ ok: z.boolean() })" }
  ],
  "templates": [
    {
      "from": "templates/route.ts.eta",
      "to": "web-app/app/api/<%= ROUTE_NAME %>/route.ts",
      "engine": "eta"
    },
    {
      "from": "templates/readme.md.eta",
      "to": "docs/builders/nextjs-api-route-<%= ROUTE_NAME %>.md",
      "engine": "eta"
    }
  ],
  "validators": ["npm run -w web-app build"],
  "licenses": [{ "name": "MIT" }]
}
