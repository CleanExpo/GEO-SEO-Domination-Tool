import { cookies } from 'next/headers';

const COOKIE = 'active_workspace';

export function getActiveWorkspaceId(){
  try { return cookies().get(COOKIE)?.value || null; } catch { return null; }
}

export function setActiveWorkspaceCookie(id: string){
  // Note: In App Router, set cookies from server actions/route handlers.
  // This helper is informational; real setting happens in /api/workspaces.
  return { name: COOKIE, value: id } as const;
}
