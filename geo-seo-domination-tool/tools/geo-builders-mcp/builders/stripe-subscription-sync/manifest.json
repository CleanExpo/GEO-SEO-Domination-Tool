{
  "id": "stripe-subscription-sync",
  "title": "Stripe Subscription Role Sync",
  "summary": "Enhanced Stripe webhook that syncs subscription status to user roles in Supabase profiles table.",
  "engine": "eta",
  "variables": [
    {
      "name": "WEBHOOK_SECRET_VAR",
      "required": false,
      "example": "STRIPE_WEBHOOK_SECRET"
    },
    {
      "name": "ROUTE_SEGMENT",
      "required": false,
      "example": "stripe"
    },
    {
      "name": "PROFILES_TABLE",
      "required": false,
      "example": "profiles"
    }
  ],
  "files": [
    {
      "from": "templates/route.ts.eta",
      "to": "web-app/app/api/webhooks/<%= ROUTE_SEGMENT || 'stripe' %>/route.ts",
      "strategy": "create-or-overwrite"
    }
  ]
}
