# Notification Service Configuration

# Email Provider ('resend' or 'sendgrid')
EMAIL_PROVIDER=resend

# Email API Key
# Resend: Get from https://resend.com/api-keys
# SendGrid: Get from https://app.sendgrid.com/settings/api_keys
EMAIL_API_KEY=your_api_key_here

# From Email Address (must be verified with your provider)
EMAIL_FROM=noreply@geoseodomination.com

# From Name (displayed to recipients)
EMAIL_FROM_NAME=GEO-SEO Domination

# Reply-To Email (optional)
EMAIL_REPLY_TO=support@geoseodomination.com

# Retry Configuration
EMAIL_MAX_RETRIES=3
EMAIL_RETRY_DELAY=60000

# Queue Configuration
EMAIL_ENABLE_QUEUE=true
EMAIL_BATCH_SIZE=10

# Application URL (for unsubscribe links)
NEXT_PUBLIC_APP_URL=http://localhost:3000
