{
  "id": "seo-app-in-a-box",
  "title": "SEO App in a Box",
  "summary": "One-shot: crawl → audit → (optional) keyword cluster + Docker/CI wiring.",
  "steps": [
    { "builder": "seo-sitemap-crawler", "variables": { "START_URL": "https://example.com", "MAX_URLS": "500" } },
    { "builder": "seo-site-audit-lite", "variables": { "INPUT_JSON": "server/logs/seo/crawl-*.json" } },
    { "builder": "seo-keyword-cluster-lite", "variables": { "INPUT_CSV": "server/logs/seo/keywords.csv" } },
    { "builder": "docker-compose", "variables": { "SERVICE_NAME": "web", "PORT": "3000" } },
    { "builder": "github-actions-ci" }
  ]
}
