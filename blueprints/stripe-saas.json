{
  "id": "stripe-saas",
  "title": "Stripe SaaS (env + client + webhook)",
  "summary": "Adds Stripe env/client and a verified webhook endpoint. Pairs well with Docker/CI builders.",
  "steps": [
    {
      "builder": "stripe-setup",
      "variables": {
        "STRIPE_SECRET_KEY": "${env:STRIPE_SECRET_KEY}",
        "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY": "${env:NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY}"
      }
    },
    {
      "builder": "stripe-webhook",
      "variables": {
        "WEBHOOK_SECRET": "${env:STRIPE_WEBHOOK_SECRET}",
        "ROUTE_SEGMENT": "stripe"
      }
    }
  ]
}
